<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/margin_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/width_card">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/width_card"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    />

                <TextView
                    android:id="@+id/textViewType"
                    android:text="UA"
                    android:layout_marginLeft="@dimen/text_margin"
                    android:layout_marginBottom="@dimen/text_margin"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="@dimen/font_normalSize"
                    android:textColor="@color/black"
                    android:layout_width="@dimen/width_fourty"
                    android:layout_height="@dimen/width_fourty"/>

                <RelativeLayout
                    android:paddingTop="@dimen/little_padding"
                    android:paddingBottom="@dimen/little_padding"
                    android:paddingLeft="@dimen/padding_middle"
                    android:paddingRight="@dimen/padding_middle"
                    android:layout_margin="@dimen/activity_horizontal_margin"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">



                    <TextView
                        android:textSize="@dimen/font_middleSize"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:id="@+id/textViewRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </RelativeLayout>

            </RelativeLayout>


            <RelativeLayout
                android:padding="@dimen/padding_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textViewTitle"
                    android:textSize="@dimen/font_highSize"
                    android:textColor="@color/dark_grey"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/textViewLanguage"
                    android:layout_below="@id/textViewTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>



        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>